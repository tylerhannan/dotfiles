# Some days are better than others
alias die-in-a-fire="vagrant destroy"
alias HenryV='git commit -am "Once more unto the breach, dear friends," && git push -f origin master'
alias kthxbai='exit'

# Show/Hide Desktop icons during presentations or when overwhelmed
alias HideDesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias ShowDesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# Turn on/off notification center
alias SoAnnoying="launchctl unload -w /System/Library/LaunchAgents/com.apple.notificationcenterui.plist"
alias BugMeAgain="launchctl load -w /System/Library/LaunchAgents/com.apple.notificationcenterui.plist"

# Aliases for launching applications
alias vlc='open -a VLC'
alias mdown='open -a Byword'
alias mpreview='open -a Marked'
alias notes="open -a nvALT"

# Aliases for things that require them
alias seedbox='ssh -2 viqbang@dionysus.feralhosting.com'
alias tunnel="screen ssh -2 -D 55555 viqbang@dionysus.feralhosting.com"

# Aliases for standard commands
alias l='ls -alh'
alias ls="ls -G"
alias lss="ls -l"
alias grep="grep --color=auto"
alias lsl="l -t | less"
alias c="clear"

# Typing is hard
alias cd..="cd .."
alias ..="cd .."
alias .2="cd ../.."
alias ...="cd ../.."
alias .3="cd ../../.."
alias ....="cd ../../.."
alias .4="cd ../../../.."
alias .....="cd ../../../.."

# I read numbers like a human
alias du='du -h'
alias df='df -h'

# Random Password Generation
alias randpass="openssl rand -base64 12"

# Testing all of the speeds
# https://github.com/sivel/speedtest-cli
alias speedtest='./speedtest-cli'

# Git shortcuts
alias gs="git status" # Always used, shutup OCD. shutup OCD. shutup OCD.

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

